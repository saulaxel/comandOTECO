#!/bin/bash

IFS_ANTERIOR=$IFS;
IFS=$'\n';

for ((x=17; x>=0; x--)); do
	clear;
	i=1;
	for linea in $(cat $1/muro.txt); do
		#echo $i" "$x;
		if [ $i -le $x ]; then
			echo $linea;
		fi
		let i=$i+1;
	done
	i=1;
	for linea in $(cat $1/bienvenida.txt); do
		if [ $i -ge $x ]; then
			echo $linea;
		fi
		let i=$i+1;
	done

	sleep 0.1;
done
IFS=$IFS_ANTERIOR;
